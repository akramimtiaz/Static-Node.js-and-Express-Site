extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 My Portfolio

      p.lead.text-light
        | The list of projects that I have completed thus far as a part of my techdegree. Each project
        | aims to demonstrate a different skill that I have learnt over the course of the techdegree.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

    each project in projects
      .cell
        a(href= '/project' + project.id)
          img.thumbnail(src= project.image_urls[0])
          h5 #{project.project_name}
